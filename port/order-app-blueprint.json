{
    "identifier": "order",
    "description": "This blueprint represents a Order App",
    "title": "Order",
    "icon": "Microservice",
    "schema": {
      "properties": {

        "provider": {
            "type": "string",
            "title": "Provider",
            "default": "n/a",
            "description": "The provider where the app is deployed",
            "enum": [
                "aws",
                "n/a"
            ]
        },

        "region": {
            "type": "string",
            "title": "Region",
            "default": "us-east-1",
            "description": "The provider region",
            "enum": [
                "us-east-1",
                "us-east-2"
              ]
          },

        "min-node-count": {
          "type": "number",
          "title": "Minimum number of nodes",
          "default": 1,
          "description": "The minimun number of nodes (autoscaler might increase this number)"
        },

        "status": {
          "type": "string",
          "title": "Status",
          "description": "The app status"
        }
      },
      "required": [
        "provider",
        "region"
      ]
    },
    "mirrorProperties": {},
    "calculationProperties": {
      "cluster": {
        "type": "string",
        "title": "Order",
        "calculation": "if .properties.provider == \"aws\" then \"ck-port\" end"
      }
    },
    "relations": {}
  }
